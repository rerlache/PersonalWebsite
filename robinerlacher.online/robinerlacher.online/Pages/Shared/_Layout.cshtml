<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] robinerlacher.online</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" rel="stylesheet" />
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />
    <!-- MDB -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.10.1/mdb.min.css" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow fixed-top pb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">
                    <img src="~/assets/img/reLogo.png" height="30" alt="Robin Erlacher" loading="lazy" />
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="fas fa-bars"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/About"><i class="fas fa-user-circle"></i> About me</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Photography"><i class="fas fa-camera"></i> Photography</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Motorcycle"><i class="fas fa-motorcycle"></i> Motorcycle</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Dog"><i class="fas fa-dog"></i> Dog</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Icehockey"><i class="fas fa-hockey-puck"></i> Icehockey</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Coding"><i class="fas fa-laptop-code"></i> Coding</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-dark text-center text-white fixed-bottom" >
        <div class="container p-3">
            <section class="p-1">
                <!-- Icons -->
                <a class="btn btn-outline-light btn-floating m-1" role="button" href="https://github.com/rerlache" target="_blank" title="Github">
                    <i class="fab fa-github-square"></i>
                </a>
                <a class="btn btn-outline-light btn-floating m-1" role="button" href="https://twitter.com/rerlache" target="_blank" title="Twitter">
                    <i class="fab fa-twitter"></i>
                </a>
                <a class="btn btn-outline-light btn-floating m-1" role="button" href="https://www.linkedin.com/in/robin-erlacher-4ba8bb229/" target="_blank" title="Linkedin">
                    <i class="fab fa-linkedin"></i>
                </a>
                <a class="btn btn-outline-light btn-floating m-1" role="button" href="https://www.facebook.com/rerlache/" target="_blank" title="Facebook">
                    <i class="fab fa-facebook-f"></i>
                </a>
                <a class="btn btn-outline-light btn-floating m-1" role="button" href="https://www.instagram.com/re86_photo/" target="_blank" title="Instagram">
                    <i class="fab fa-instagram"></i>
                </a>
                <a class="btn btn-outline-light btn-floating m-1" role="button" href="mailto:main@robinerlacher.online" target="_blank" title="Mail">
                    <i class="fas fa-at"></i>
                </a>
            </section>
        </div>
        <div class="text-center p-1" style="background-color: rgba(0,0,0,0.2);">
            &copy; 2022 - robinerlacher.online - <a class="text-white" asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
